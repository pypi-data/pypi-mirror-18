<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:genericsetup="http://namespaces.zope.org/genericsetup"
    i18n_domain="collective.compoundcriterion">

    <include file="configure.zcml" />

    <adapter for="*"
             factory="collective.compoundcriterion.tests.adapter.TestingCompoundCrietrionFilterAdapter"
             provides="collective.compoundcriterion.interfaces.ICompoundCriterionFilter"
             name="testing-compound-adapter" />

    <adapter for="*"
             factory="collective.compoundcriterion.tests.adapter.SampleCompoundCrietrionFilterAdapter"
             provides="collective.compoundcriterion.interfaces.ICompoundCriterionFilter"
             name="sample-compound-adapter" />

    <adapter for="*"
             factory="collective.compoundcriterion.tests.adapter.WrongFormatCompoundCrietrionFilterAdapter"
             provides="collective.compoundcriterion.interfaces.ICompoundCriterionFilter"
             name="wrongformat-compound-adapter" />

    <genericsetup:registerProfile
        name="testing"
        title="collective.compoundcriterion tests"
        directory="profiles/testing"
        description="Steps to ease tests of collective.compoundcriterion"
        provides="Products.GenericSetup.interfaces.EXTENSION"
    />

</configure>
