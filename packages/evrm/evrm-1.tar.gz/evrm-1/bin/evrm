#!/usr/bin/env python3
#
#

""" Die medicijnen zijn gif en het toedienen ervan is stafbaar !! """

import sys, os
sys.path.insert(0, os.getcwd())

os.environ['PYTHONPATH'] = os.path.abspath(".")
os.environ['PYTHONIOENCODING'] = "utf-8"

from mads.shell import shutdown
from mads.input import Input 

from evrm import __version__, __txt__

from mids import boot, mods

def main():
    mods.walk("evrm")
    boot("EVRM", __version__, __txt__, "~/.evrm")
    bot = Input()
    bot.run_forever()
    
if __name__ == "__main__": 
    try: main()
    except KeyboardInterrupt:
        pass
    shutdown()
    os._exit(0)
