<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>{% trim %}{% block title %}{% endblock %}{% endtrim %}</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" href="@root/css/theme.css">
	<link rel="stylesheet" href="@root/css/pygments.css">
	<link rel="stylesheet" href="@root/fa/css/font-awesome.min.css">
	<!--[if lt IE 9]>
		<script src="@root/js/html5shiv.js"></script>
	<![endif]-->
</head>

<body class="{{{ classes }}}">

	<header id="header">
		<nav class="upper">
			{{ inc.menu_upper || inc.menu }}
		</nav>

		<div id="masthead">
			<h2><a href="@root/">{{ site.title || "Site Title" }}</a></h2>
			{% if site.tagline %}
				<p>{{ site.tagline }}</p>
			{% endif %}
		</div>

		<nav class="lower">
			<input id="menu-check" type="checkbox"/>
			<label id="menu-label" for="menu-check" class="unselectable">
				<i class="fa fa-bars open" aria-hidden="true"></i>
				<i class="fa fa-times close" aria-hidden="true"></i>
				<span>MENU</span>
			</label>
			{{ inc.menu_lower || inc.menu }}
		</nav>

		{% block banner %}{% endblock %}
	</header>

	<main id="main" class="clearfix">
		{% block content %}
			<section id="content">
				{% block nodes %}{% endblock %}
			</section>
		{% endblock %}

		{% block sidebar %}
			<aside id="sidebar">
				{{ inc.sidebar }}
			</aside>
		{% endblock %}
	</main>

	<footer id="footer">
		{% if inc.footer %}
			<div id="footboxes">
				<div class="wrapper clearfix">
					{{ inc.footer }}
				</div>
			</div>
		{% endif %}

		<div id="footbar" class="clearfix">
			{% if site.copyright %}
				<span class="copyright">{{ site.copyright }}</span>
			{% endif %}

			<span class="links">
				<!-- This link is just a placeholder. -->
				<a href="http://mulholland.xyz/docs/ivy/">Powered by Ark</a> |
				<a href="#">Back To Top</a>
			</span>
		</div>
	</footer>

</body>
</html>
