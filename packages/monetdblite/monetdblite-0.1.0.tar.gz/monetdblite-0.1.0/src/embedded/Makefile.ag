INCLUDES = ../mal/mal \
		   ../mal/modules/atoms \
		   ../mal/modules/mal \
		   ../mal/modules/kernel \
		   ../mal/extras/rapi \
		   ../gdk \
		   ../common/stream \
		   ../common/utils \
		   ../common/options \
		   ../sql/include \
		   ../sql/server \
		   ../sql/common \
		   ../sql/storage \
		   ../sql/storage/bat \
		   ../sql/backends/monet5 \
		   $(pcre_CFLAGS)

lib_embedded  = {
	SOURCES = embedded.c embedded.h
	VERSION = 1
	LIBS = ../mal/tools/libmonetdb5 \
		../gdk/libbat \
		$(pcre_LIBS) $(PSAPILIB) \
		$(SOCKET_LIBS) $(MALLOC_LIBS) $(DL_LIBS) $(PTHREAD_LIBS)
}

lib_embeddedpy  = {
	COND = HAVE_EMBEDDED_PY
	SOURCES = conversion.c embeddedpy.c pyclient.c pytypes.c type_conversion.c unicode.c
	VERSION = 1
	LIBS = ../mal/tools/libmonetdb5 \
		libembedded \
		../gdk/libbat \
		$(pcre_LIBS) $(PSAPILIB) \
		$(SOCKET_LIBS) $(MALLOC_LIBS) $(DL_LIBS) $(PTHREAD_LIBS)
}
