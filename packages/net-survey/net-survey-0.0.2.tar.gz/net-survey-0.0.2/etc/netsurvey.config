[DEFAULT]
# mode=client
# inventory_file=/etc/net-survey/inventory.ini
# bind_host=0.0.0.0
# bind_port=4000
# server_ip=127.0.0.1
# server_port=4000
# server_api_port=8000
# use_log_file=True
# log_file=/var/var/net-survey/survey.log
# log_level=INFO

[server]
################################################################
# Size the listener_timeout and timeout_wait based on the scale
# of your network.  Larger the network, the higher the values
# neet to be, but the default is 5m.  Timeout_wait should be
# reduced substantially if the listener_time is reduces below
# 60 seconds.
################################################################
# listener_timeout=900
# timeout_wait=30
# scan_on_start=True

[client]
################################################################
# Size the listener_timeout and timeout_wait based on the scale
# of your network.  Larger the network, the higher the values
# neet to be, but the default is 5m.  Timeout_wait should be
# reduced substantially if the listener_time is reduces below
# 60 seconds.
################################################################
# listener_timeout=900
# timeout_wait=30

################################################################
# Ports to scan for client network scanner.  Default is 1-1024,
# but you can mix and add range or comma seperated list of ports
# to scan: 1-1024,9000,9696
################################################################
# scan_ports=1-1024

################################################################
# Concurrent scans to run on the client.  This equates to the
# number of concurrent threads running to scan each neighboring
# ip address.
################################################################
# concurrent_scans=1